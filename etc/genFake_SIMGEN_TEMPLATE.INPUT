# Created Sep 7, 2012
# Template input file for SNANA simulation to generate
# fake SN. This template is used by script to create
# a simgen-input file for each DES season.
#
# 'REPLACE' below indicates which keys are updated by the
# script for each season. The REPLACE keys are here just
# for human readability and are not used by any scripts.
#
#

SOLID_ANGLE: 0.009     # 30 sq deg
SIMLIB_FILE: DES_FAKES.SIMLIB   # REPLACE

HOSTLIB_FILE:  /data/dp62.b/data/SNDATA_ROOT/INTERNAL/DES/fakeSN/HOSTLIB/cfht_w1_xmmlss+fakes.HOSTLIB

#HOSTLIB_FILE:  /data/dp62.b/data/SNDATA_ROOT/INTERNAL/DES/fakeSN/HOSTLIB/TEST.HOSTLIB

#Nugent1_fakes.HOSTLIB
#DC7_prescale10.HOSTLIB
#DC7_Field5.HOSTLIB
#DC7_CCD1_a0cut.HOSTLIB

HOSTLIB_GENRANGE_NSIGZ: -3. +3.  # not yet implemented

HOSTLIB_MSKOPT:  56  # 8=gal coords, 16=Zgal, 32=1 SN per gal
#HOSTLIB_FIXRAN_RADIUS: 0.8
#HOSTLIB_FIXRAN_PHI:    0.

NGENTOT_LC:    1001           # REPLACE
GENVERSION: RKDES_TEST_FAKES  # REPLACE
GENSOURCE:  RANDOM   
GENMODEL:   SALT2.Guy10

GENFILTERS:  griz

EXPOSURE_TIME:  1000.
CIDOFF:  100000      # REPLACE

KCOR_FILE:   DES/kcor_DES_grizY.fits

# selection criteria for generation
GENRANGE_PEAKMJD: 56140.0   56320.0   # REPLACE

GENRANGE_REDSHIFT:  0.10    1.
DNDZ:  DNDZ_SUBSTITUTE_XXX       # REPLACE
DNDZ_ZEXP_REWGT:  -2.0  # DNDZ *= 1/z^2

GENRANGE_TREST:   -18.0  70.0     # rest epoch relative to peak (days)

RANSEED: 70789       # random number seed
CLEARPROMPT: 0

APPLY_CUTWIN_OPT: 1
CUTWIN_NEPOCH:    5 -5.       # require 5 epochs (no S/N requirement)
CUTWIN_PEAKMAG:   10 27       # any filter with peakMag < 27

# cosmological params for lightcurve generation and redshift distribution
OMEGA_MATTER:  0.27
OMEGA_LAMBDA:  0.73
W0_LAMBDA:    -1.00
H0:           70.0   


SIMGEN_DUMP: 10  CID Z S2c S2x1 RA DECL MAGT0_g MAGT0_r MAGT0_i MAGT0_z
